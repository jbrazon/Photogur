<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @picture.title %>
</p>
<p>
  <strong>Description:</strong>
  <%= @picture.description %>
</p>
<p>
  <strong>Submitted By:</strong>
  <%= @picture.submitted_by %>
</p>

<p>
<%= image_tag @picture.picture_show(:medium) %>
</p>
<br>
Added on: <%= time_ago_in_words(@picture.created_at) %>
<p>
<%= link_to 'Edit', edit_picture_path(@picture) %>
</p>
<p>
<%= link_to 'Destroy', @picture, method: :delete, data: { confirm: 'Are you sure?' } %>
</p>


<h3>Likes</h3>
<%= @picture.likes %>
<%= button_to "Like", action: "like" %>

<h3>Comments</h3>

<% @picture.comments.each do |comment| %>
	<p>
		<%= comment.comment %>
		<br>
		Added on: <%= time_ago_in_words(comment.created_at) %>
	</p>
<% end %>

<h3>New Comment</h3>
<%= render 'comments/form' %>

